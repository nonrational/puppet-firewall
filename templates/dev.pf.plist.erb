<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
    <key>Label</key>
    <string><%= scope.lookupvar('servicename') %></string>

    <key>Program</key>
    <string><%= scope.lookupvar('boxen::config::bindir') %>/pf-control.sh</string>

    <key>ProgramArguments</key>
    <array>
        <string><%= scope.lookupvar('boxen::config::bindir') %>/pf-control.sh</string>
        <string>restart</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>ServiceDescription</key>
    <string>Boxen's FreeBSD Packet Filter (pf) daemon</string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar('boxen::config::logdir') %>/pf.log</string>
    <key>StandardOutPath</key>
    <string><%= scope.lookupvar('boxen::config::logdir') %>/pf.log</string>
</dict>
</plist>
